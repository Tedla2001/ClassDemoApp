<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.CharacterDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/player_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:maxWidth="300dp"
        android:maxHeight="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/player_name_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_tag"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_image"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Partey"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/player_name_tag"
        app:layout_constraintTop_toBottomOf="@id/player_image"
        />

    <TextView
        android:id="@+id/player_club_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/club_tag"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_name"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/player_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Arsenal"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/player_club_tag"
        app:layout_constraintTop_toBottomOf="@id/player_name"
        />

    <TextView
        android:id="@+id/player_nation_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nation: "
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_club"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/player_nation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ghana"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/player_nation_tag"
        app:layout_constraintTop_toBottomOf="@id/player_club"
        />

    <TextView
        android:id="@+id/player_position_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/position_tag"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_nation"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/player_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Midfielder"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/player_position_tag"
        app:layout_constraintTop_toBottomOf="@id/player_nation"
        />

    <TextView
        android:id="@+id/player_age_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age_label"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_position"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/player_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="29"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/player_age_tag"
        app:layout_constraintTop_toBottomOf="@id/player_position"
        />




</androidx.constraintlayout.widget.ConstraintLayout>